CC = gcc
CFLAGS = -ansi
LIBS = -lm

.PHONY: all clean

all: problem1.out  problem2.out
	@echo "Usage: ./problem1.out"
	@echo "Usage: ./problem2.out"

%.out: %.o
	$(CC) $(CFLAGS) -o $@ $< $(LIBS)

%.o: %.c
	$(CC) $(CFLAGS) -c -o $@ $<

clean:
	-rm -f *.o
	-rm -f *.out

